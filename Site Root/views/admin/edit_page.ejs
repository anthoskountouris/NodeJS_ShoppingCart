<%- include('../layouts/adminHeader') %> 

<h2 class="page-title">Edit a page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>

<form method="post" action="/admin/pages/edit-page/<%= id %>">
    <div class="form-group mb-3">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <div class="form-group mb-3">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>

    <div class="form-group">
        <label for="">Content</label>
        <textarea class="form-control" name="content" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
        <script type="text/javascript">
            CKEDITOR.replace( 'ta' );
        </script>
    </div>

    <button class="btn btn-outline-warning">Submit</button>
</form>


<%- include('../layouts/adminFooter') %> 